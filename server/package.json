{
  "name": "express-typescript-babel",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "clean": "rm -rf build && rm -rf dist",
    "tsc": "node ./node_modules/.bin/tsc",
    "babel": "node ./node_modules/.bin/babel --presets es2015 build --out-dir dist --source-maps",
    "copy-files": "cp package.json dist/ && cp knexfile.js dist/ && cp -r public dist/ && cp -r node_modules dist/ && cp -r migrations dist/ && cp -r seeds dist/",
    "build": "yarn run clean && yarn run tsc && yarn run babel && yarn run copy-files",
    "copy-dotenv": "cp .env dist/",
    "start-dev": "yarn run build && yarn run copy-dotenv && cd dist && yarn start",
    "package": "zip -r pachamama-server.zip dist",
    "test": "echo 'no tests yet...'",
    "reset-database": "knex migrate:rollback && knex migrate:latest && knex seed:run"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.16.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.0",
    "dotenv": "^4.0.0",
    "express": "~4.14.1",
    "knex": "^0.12.7",
    "morgan": "~1.7.0",
    "pg": "^6.1.2",
    "serve-favicon": "~2.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^0.0.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/debug": "^0.0.29",
    "@types/dotenv": "^2.0.20",
    "@types/express": "^4.0.35",
    "@types/knex": "^0.0.41",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.5",
    "@types/pg": "^6.1.36",
    "@types/serve-favicon": "^2.2.28",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "copyfiles": "^1.2.0",
    "typescript": "^2.1.6"
  }
}
